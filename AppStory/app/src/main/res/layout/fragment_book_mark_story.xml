<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:paddingHorizontal="10dp"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/im_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/custom_ripple"
            android:src="@drawable/icon_menu_72"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="@string/bookmark"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/im_menu"
            app:layout_constraintLeft_toRightOf="@+id/im_menu"
            app:layout_constraintTop_toTopOf="@+id/im_menu" />
        <TextView
            android:id="@+id/tv_checkNoData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Không có dữ liệu "
            android:visibility="invisible"

            android:gravity="center"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tv_rate_story"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Truyện đã lưu"
            android:layout_marginTop="15dp"
            android:textColor="#205C8F"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/im_menu"
            app:layout_constraintTop_toBottomOf="@+id/im_menu" />

        <TextView
            android:id="@+id/tv_delete_bookmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="@string/delete_bookmark"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:foreground="@drawable/custom_ripple_view"
            android:background="@drawable/custom_bg_item_bookmark_story"
            android:textSize="12sp"
            android:paddingVertical="10dp"
            android:paddingHorizontal="15dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_rate_story"
            app:layout_constraintBottom_toBottomOf="@id/tv_rate_story"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rc_item_story"
            android:layout_width="0dp"

            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="vertical"
            tools:listitem="@layout/item_story_bookmark"
            app:layout_constraintTop_toBottomOf="@id/tv_rate_story"
            app:layout_constraintLeft_toLeftOf="@+id/tv_rate_story"
            app:layout_constraintRight_toRightOf="@id/tv_delete_bookmark"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>