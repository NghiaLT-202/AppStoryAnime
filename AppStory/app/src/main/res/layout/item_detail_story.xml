<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"

        android:background="@drawable/custom_ripple_view">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_image"
            android:layout_width="120dp"
            android:layout_height="0dp"
            android:background="#40000000"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="2:2.6"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv_nameStory"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/im_story"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:background="@color/black"
                android:cropToPadding="true"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_nameStory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:maxLines="4"
            android:textColor="#D9000000"
            android:textSize="18sp"
            app:layout_constraintLeft_toRightOf="@+id/cv_image"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cv_image"
            tools:text="Kiếm Động Cửu Thiên" />


        <TextView
            android:id="@+id/tv_numberChapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginTop="15dp"

            android:text="@string/view_story"
            android:textColor="#CC000000"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="@id/tv_nameStory"
            app:layout_constraintTop_toBottomOf="@+id/view_star" />


        <TextView
            android:id="@+id/tv_category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_marginTop="5dp"

            android:text="@string/th_lo_i"
            android:textColor="#CC000000"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="@id/tv_nameStory"
            app:layout_constraintTop_toBottomOf="@+id/tv_numberChapter" />

        <TextView
            android:id="@+id/tv_nameCategory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:layout_marginRight="10dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_marginLeft="5dp"
            tools:text="@string/view_story"
            android:textColor="#5897C0"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@+id/tv_category"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_numberChapter" />


        <com.example.appstory88.customview.ViewStar
            android:id="@+id/view_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
            app:layout_constraintLeft_toLeftOf="@+id/tv_nameStory"
            app:layout_constraintTop_toBottomOf="@+id/tv_nameStory"
            app:numberStar="4" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>