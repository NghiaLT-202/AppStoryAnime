<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@drawable/custom_bg_search"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/im_menu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@drawable/custom_bg_search"
            android:padding="10dp"
            android:src="@drawable/icon_back_white72"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="@string/app_story"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/im_menu"
            app:layout_constraintLeft_toRightOf="@+id/im_menu"
            app:layout_constraintTop_toTopOf="@+id/im_menu" />

        <TextView
            android:id="@+id/tv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/custom_bg_search"
            android:drawableLeft="@drawable/icon_search_20"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:paddingVertical="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:text="@string/search"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/im_menu"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/im_menu" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="30dp"
            android:background="#40000000"
            app:cardCornerRadius="12dp"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            app:layout_constraintDimensionRatio="3.3:4"
            app:layout_constraintLeft_toLeftOf="@+id/im_menu"
            app:layout_constraintRight_toLeftOf="@id/tv_nameStory"
            app:layout_constraintTop_toBottomOf="@+id/im_menu">

            <ImageView
                android:id="@+id/im_story"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:scaleType="centerCrop"
                android:src="@drawable/anime" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_nameStory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Kiếm Động Cửu Thiên"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/cv_image"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cv_image" />


        <com.example.appstory88.customview.ViewStar
            android:id="@+id/view_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            app:layout_constraintLeft_toLeftOf="@+id/tv_nameStory"
            app:layout_constraintTop_toBottomOf="@+id/tv_nameStory"
            app:numberStar="4" />

        <TextView
            android:id="@+id/tv_read_story"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_bg_search"
            android:gravity="center"
            android:paddingVertical="10dp"
            android:text="@string/read_story"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/cv_image"
            app:layout_constraintLeft_toLeftOf="@+id/tv_nameStory"
            app:layout_constraintRight_toRightOf="@+id/tv_search" />

        <View
            android:id="@+id/view_top_story"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/custom_boder_top_detai_story"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cv_image" />

        <TextView
            android:id="@+id/tv_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:text="@string/view"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="@+id/cv_image"
            app:layout_constraintTop_toTopOf="@+id/view_top_story" />

        <TextView
            android:id="@+id/tv_value_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1001"
            android:textColor="@color/black"
            android:textSize="16sp"

            app:layout_constraintLeft_toLeftOf="@id/tv_value_chapter_number"
            app:layout_constraintTop_toTopOf="@+id/tv_view" />

        <TextView
            android:id="@+id/tv_chapter_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/chapter_number"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="@+id/tv_view"
            app:layout_constraintTop_toBottomOf="@id/tv_view" />

        <TextView
            android:id="@+id/tv_value_chapter_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@+id/tv_chapter_number"
            app:layout_constraintRight_toRightOf="@+id/cv_image"
            app:layout_constraintTop_toTopOf="@+id/tv_chapter_number" />


        <TextView
            android:id="@+id/tv_authur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/athur"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="@+id/tv_view"
            app:layout_constraintTop_toBottomOf="@+id/tv_chapter_number" />

        <TextView
            android:id="@+id/tv_value_authur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mck"
            android:textColor="@color/black"
            android:textSize="16sp"

            app:layout_constraintLeft_toLeftOf="@id/tv_value_chapter_number"
            app:layout_constraintTop_toTopOf="@+id/tv_authur" />

        <TextView
            android:id="@+id/tv_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/category_r"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="@+id/tv_view"
            app:layout_constraintTop_toBottomOf="@+id/tv_authur" />

        <TextView
            android:id="@+id/tv_value_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đam mỹ"
            android:textColor="@color/black"
            android:textSize="16sp"

            app:layout_constraintLeft_toLeftOf="@id/tv_value_chapter_number"
            app:layout_constraintTop_toTopOf="@+id/tv_category" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/status_s"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="@+id/tv_view"
            app:layout_constraintTop_toBottomOf="@+id/tv_value_category" />

        <TextView
            android:id="@+id/tv_value_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đang ra"
            android:textColor="@color/black"
            android:textSize="16sp"

            app:layout_constraintLeft_toLeftOf="@id/tv_value_chapter_number"
            app:layout_constraintTop_toTopOf="@+id/tv_status" />

        <TextView
            android:id="@+id/tv_describe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/describe"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="@+id/tv_view"
            app:layout_constraintTop_toBottomOf="@+id/tv_status" />

        <TextView
            android:id="@+id/tv_line"
            android:layout_width="0dp"
            android:layout_height="0.6dp"
            android:layout_marginTop="10dp"
            android:background="#767777"
            app:layout_constraintLeft_toLeftOf="@+id/tv_view"
            app:layout_constraintRight_toRightOf="@+id/tv_read_story"
            app:layout_constraintTop_toBottomOf="@+id/tv_describe" />

        <TextView
            android:id="@+id/tv_value_describe"
            android:layout_width="0dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:text="Võ đạo đỉnh phong, là cô độc, là tịch mịch, là dài đằng đẵng cầu tác, là cao xử bất thắng hàn
Phát triển trong nghịch cảnh, cầu sinh nơi tuyệt địa, bất khuất không buông tha, mới có thể có thể phá võ chi cực đạo.
Lăng Tiêu các thí luyện đệ tử kiêm quét rác gã sai vặt Dương Khai ngẫu lấy được một bản vô tự hắc thư, từ nay về sau đạp vào dài đằng đẵng võ đạo."
            app:layout_constraintLeft_toLeftOf="@+id/tv_view"
            app:layout_constraintRight_toRightOf="@+id/tv_read_story"
            app:layout_constraintTop_toBottomOf="@id/tv_line" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>