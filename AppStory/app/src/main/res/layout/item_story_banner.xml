<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:foreground="@drawable/custom_ripple_view"
        android:background="@drawable/custom_boder_item_banner"
        android:padding="15dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#40000000"
            app:cardCornerRadius="12dp"
            app:layout_constraintDimensionRatio="3.3:5"
            app:layout_constraintBottom_toBottomOf="@id/tv_nameCategory"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_nameCategory">

            <ImageView
                android:id="@+id/im_story"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:background="@color/white"
                android:scaleType="centerCrop"
                 />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_nameStory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:ellipsize="end"
            android:maxLines="3"
            tools:text="Kiếm Động Cửu Thiên"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/cv_image"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cv_image" />


        <com.example.appstory88.customview.ViewStar
            android:id="@+id/view_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            app:layout_constraintLeft_toLeftOf="@+id/tv_nameStory"
            app:layout_constraintTop_toBottomOf="@+id/tv_nameStory"
            app:numberStar="4" />

        <TextView
            android:id="@+id/tv_nameAuthor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/t_c_gi"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="@+id/tv_nameStory"

            app:layout_constraintLeft_toRightOf="@+id/cv_image"
            app:layout_constraintTop_toBottomOf="@id/view_star" />

        <TextView
            android:id="@+id/tv_valueNameAuthor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="12sp"

            app:layout_constraintLeft_toLeftOf="@id/tv_valueNameCategory"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="10dp"
            app:layout_constraintTop_toBottomOf="@id/view_star" />

        <TextView
            android:id="@+id/tv_nameCategory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="2"


            android:text="@string/th_lo_i"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="@+id/tv_nameStory"
            app:layout_constraintLeft_toRightOf="@+id/cv_image"
            app:layout_constraintTop_toBottomOf="@id/tv_nameAuthor" />
        <TextView
            android:id="@+id/tv_valueNameCategory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="@color/white"
            android:layout_marginLeft="5dp"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@+id/tv_nameCategory"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="10dp"
            app:layout_constraintTop_toTopOf="@+id/tv_nameCategory"
           />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>