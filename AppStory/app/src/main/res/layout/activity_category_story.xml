<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:paddingHorizontal="10dp"

        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/im_menu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:paddingVertical="5dp"
            android:paddingEnd="5dp"
            android:background="@drawable/custom_ripple"
            android:src="@drawable/baseline_menu_24"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="@string/category"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/im_menu"
            app:layout_constraintLeft_toRightOf="@+id/im_menu"
            app:layout_constraintTop_toTopOf="@+id/im_menu" />



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rc_item_story"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2"
            tools:listitem="@layout/item_category_story"
            app:layout_constraintLeft_toLeftOf="@id/im_menu"
            app:layout_constraintTop_toBottomOf="@+id/im_menu"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>