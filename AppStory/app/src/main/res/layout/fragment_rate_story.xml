<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/im_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:paddingVertical="8dp"
            android:paddingEnd="5dp"
            android:background="@drawable/custom_ripple"
            android:src="@drawable/icon_menu_72"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="@string/rate_story"
            android:textColor="#4D4D4D"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/im_menu"
            app:layout_constraintLeft_toRightOf="@+id/im_menu"
            app:layout_constraintTop_toTopOf="@+id/im_menu" />

        <TextView
            android:id="@+id/tv_rate_story"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/most_read_stories_of_the_month"
            android:textColor="#3A6E96"
            android:textAllCaps="true"
            android:textSize="16sp"
            android:paddingBottom="5dp"
            app:layout_constraintLeft_toLeftOf="@id/im_menu"
            app:layout_constraintTop_toBottomOf="@+id/im_menu" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rc_item_story"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="vertical"
            tools:listitem="@layout/item_rate_story"
            app:layout_constraintTop_toBottomOf="@id/tv_rate_story"
            app:layout_constraintLeft_toLeftOf="@+id/tv_rate_story"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="20dp"
            android:paddingBottom="15dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>