<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginVertical="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_nameCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_bg_tv_top_story"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingHorizontal="20dp"
            android:paddingVertical="12dp"
            android:textSize="20sp"

            android:textColor="#ab5f70"
            app:layout_constraintDimensionRatio="3:0.7"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Truyện mới cập nhật" />

        <TextView
            android:id="@+id/tv_line"
            android:layout_width="4dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tv_nameCategory"
            app:layout_constraintBottom_toBottomOf="@id/tv_nameCategory"
            android:background="#b3515c"

            app:layout_constraintLeft_toLeftOf="@id/tv_nameCategory"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>