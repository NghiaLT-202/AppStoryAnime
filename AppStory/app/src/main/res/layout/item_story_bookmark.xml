<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_boder_item_bookmark"
        android:foreground="@drawable/custom_ripple_view"
        android:padding="15dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#40000000"
            app:cardCornerRadius="5dp"
            app:layout_constraintDimensionRatio="2:2.8"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tv_totalChapter"
            >

            <ImageView
                android:id="@+id/im_story"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:background="@color/white"
                android:cropToPadding="true"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

        <TextView

            android:id="@+id/tv_nameStory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="#686868"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/cv_image"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cv_image"
            tools:text="Kiếm Động Cửu Thiên" />


        <TextView
            android:id="@+id/tv_nameAuthor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/t_c_gi"
            android:textColor="#686868"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@+id/tv_nameStory"
            app:layout_constraintTop_toBottomOf="@+id/tv_nameStory" />

        <TextView
            android:id="@+id/tv_valueNameAuthor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#7F7F7F"

            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@+id/tv_nameAuthor"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_nameAuthor" />

        <TextView
            android:id="@+id/tv_totalChapter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="2"


            android:text="Tổng số chương:"
            android:textColor="#7F7F7F"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="@+id/tv_nameStory"
            android:paddingBottom="25dp"
            app:layout_constraintLeft_toRightOf="@+id/cv_image"
            app:layout_constraintTop_toBottomOf="@id/tv_nameAuthor" />

        <TextView
            android:id="@+id/tv_value_totalChapter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="#7F7F7F"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@+id/tv_totalChapter"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_totalChapter" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>