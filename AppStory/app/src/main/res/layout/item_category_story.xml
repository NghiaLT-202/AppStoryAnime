<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginVertical="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/custom_ripple_view"

        android:layout_height="wrap_content">
        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0dp"

            android:background="@drawable/custom_bg_tv_top_story"
            app:layout_constraintTop_toTopOf="@+id/tv_nameCategory"
            app:layout_constraintBottom_toBottomOf="@+id/tv_total_story"
            app:layout_constraintLeft_toLeftOf="@+id/tv_nameCategory"
            app:layout_constraintRight_toRightOf="@id/tv_nameCategory"

            />



        <TextView
            android:id="@+id/tv_nameCategory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Truyện mới cập nhật"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingTop= "15dp"
            android:textColor="@color/white"
            android:paddingHorizontal="25dp"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <TextView
            android:id="@+id/tv_total_story"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            tools:textSize="12sp"
            android:text="@string/_1000"
            android:paddingLeft="25dp"
            android:textColor="@color/white"
            android:paddingBottom="15dp"
            app:layout_constraintLeft_toLeftOf="@id/tv_nameCategory"
            app:layout_constraintTop_toBottomOf="@id/tv_nameCategory"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/tv_total_story"
            app:layout_constraintTop_toBottomOf="@+id/tv_nameCategory"
            android:text="@string/truy_n"
            android:paddingBottom="15dp"

            android:layout_marginLeft="5dp"
            tools:textSize="12sp"

            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/tv_line"
            android:layout_width="4dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/view"
            app:layout_constraintBottom_toBottomOf="@id/view"
            android:background="@drawable/custom_bg_line"

            app:layout_constraintLeft_toLeftOf="@id/tv_nameCategory"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>