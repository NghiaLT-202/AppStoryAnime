<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:background="@drawable/custom_ripple_view"
        android:paddingBottom="5dp"

        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_image"
            android:layout_width="120dp"
            android:layout_height="0dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintDimensionRatio="2:2.5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/im_story"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:scaleType="centerCrop"
                android:src="@drawable/anime" />


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_nameStory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="5dp"
            tools:text="Hoa Hồng Đen Tìm Lại Tình  Tìm Lại Tình "
            android:textColor="#48B0E3"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/cv_image"
            app:layout_constraintRight_toRightOf="@id/cv_image"
            app:layout_constraintTop_toBottomOf="@+id/cv_image" />

        <TextView
            android:id="@+id/tv_nameCategory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:textColor="@color/black"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="10sp"
            app:layout_constraintLeft_toLeftOf="@id/tv_nameStory"
            app:layout_constraintRight_toRightOf="@id/cv_image"
            app:layout_constraintTop_toBottomOf="@+id/tv_nameStory"
            tools:text="Hoa Hồng Đen Tìm Lại Tình Yêu" />

        <com.example.appstory88.customview.ViewStar
            android:id="@+id/view_star"
            android:layout_width="80dp"
            android:layout_height="13dp"
            app:layout_constraintLeft_toLeftOf="@id/tv_nameStory"
            app:layout_constraintTop_toBottomOf="@id/tv_nameCategory"
            app:layout_constraintBottom_toBottomOf="parent"
            app:numberStar="4" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>