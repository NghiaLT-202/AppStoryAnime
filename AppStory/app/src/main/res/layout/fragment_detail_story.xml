<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/custom_bg_describe">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/im_back"
            app:layout_constraintRight_toRightOf="parent"

            app:layout_constraintTop_toTopOf="@id/im_back">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:id="@+id/bg_view"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:alpha="0.1"
                    android:background="@drawable/anh_gai_xinh"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/tv_view"
                    />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:foreground="@drawable/custom_ripple_view"
                    android:background="@drawable/custom_bg_bookmark"
                    android:clickable="true"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_bookmark"
                    app:layout_constraintLeft_toLeftOf="@+id/im_done"
                    app:layout_constraintRight_toRightOf="@id/tv_bookmark"
                    app:layout_constraintTop_toTopOf="@+id/tv_bookmark" />

                <ImageView
                    android:id="@id/im_done"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:src="@drawable/baseline_playlist_add_24"
                    app:layout_constraintBottom_toBottomOf="@id/tv_bookmark"
                    app:layout_constraintRight_toLeftOf="@+id/tv_bookmark"
                    app:layout_constraintTop_toTopOf="@id/tv_bookmark" />




                <TextView
                    android:id="@+id/tv_bookmark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:paddingVertical="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="20dp"
                    android:text="@string/bookmark"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toTopOf="@+id/cv_image"
                    app:layout_constraintRight_toRightOf="@id/tv_read_story"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_image"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:background="#40000000"
                    android:padding="10dp"
                    app:cardCornerRadius="12dp"
                    app:layout_constraintDimensionRatio="3.3:5"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_bookmark">

                    <ImageView
                        android:id="@+id/im_story"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:cropToPadding="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/anime" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tv_nameStory"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toRightOf="@+id/cv_image"
                    app:layout_constraintRight_toRightOf="@id/tv_bookmark"
                    app:layout_constraintTop_toTopOf="@+id/cv_image"
                    tools:text="Kiếm Động Cửu Thiên" />


                <com.example.appstory88.customview.ViewStar
                    android:id="@+id/view_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    app:layout_constraintLeft_toLeftOf="@+id/tv_nameStory"
                    app:layout_constraintTop_toBottomOf="@+id/tv_nameStory"
                    app:numberStar="4" />

                <TextView
                    android:id="@+id/tv_read_story"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:foreground="@drawable/custom_ripple_view"

                    android:background="@drawable/custom_bg_bookmark"
                    android:gravity="center"
                    android:paddingVertical="10dp"
                    android:text="@string/read_story"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@+id/cv_image"
                    app:layout_constraintLeft_toLeftOf="@+id/tv_nameStory"
                    app:layout_constraintRight_toRightOf="parent" />

                <View
                    android:id="@+id/view_top_story"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/custom_boder_top_detai_story"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cv_image" />

                <TextView
                    android:id="@+id/tv_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/view"
                    android:textColor="#504F4F"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/view_top_story" />

                <TextView
                    android:id="@+id/tv_value_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toLeftOf="@id/tv_value_chapter_number"

                    app:layout_constraintTop_toTopOf="@+id/tv_view"
                    tools:text="1001" />

                <TextView
                    android:id="@+id/tv_chapter_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/chapter_number"
                    android:textColor="#504F4F"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="@+id/tv_view"
                    app:layout_constraintTop_toBottomOf="@id/tv_view" />

                <TextView
                    android:id="@+id/tv_value_chapter_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toRightOf="@+id/tv_chapter_number"
                    app:layout_constraintRight_toRightOf="@+id/cv_image"
                    app:layout_constraintTop_toTopOf="@+id/tv_chapter_number"
                    tools:text="10" />


                <TextView
                    android:id="@+id/tv_authur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/athur"
                    android:textColor="#504F4F"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="@+id/tv_view"
                    app:layout_constraintTop_toBottomOf="@+id/tv_chapter_number" />

                <TextView
                    android:id="@+id/tv_value_authur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toLeftOf="@id/tv_value_chapter_number"

                    app:layout_constraintTop_toTopOf="@+id/tv_authur"
                    tools:text="Mck" />

                <TextView
                    android:id="@+id/tv_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/category_r"
                    android:textColor="#504F4F"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="@+id/tv_view"
                    app:layout_constraintTop_toBottomOf="@+id/tv_authur" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rc_category"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="@id/tv_value_chapter_number"
                    app:layout_constraintRight_toRightOf="parent"
                    tools:listitem="@layout/item_category_detail"
                    app:layout_constraintTop_toTopOf="@+id/tv_category"
                    />

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/status_s"
                    android:textColor="#504F4F"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="@+id/tv_view"
                    app:layout_constraintTop_toBottomOf="@+id/rc_category" />

                <TextView
                    android:id="@+id/tv_value_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toLeftOf="@id/tv_value_chapter_number"

                    app:layout_constraintTop_toTopOf="@+id/tv_status"
                    tools:text="Đang ra" />

                <TextView
                    android:id="@+id/tv_describe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/describe"
                    android:textColor="#504F4F"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="@+id/tv_view"
                    app:layout_constraintTop_toBottomOf="@+id/tv_status" />

                <TextView
                    android:id="@+id/tv_line"
                    android:layout_width="0dp"
                    android:layout_height="0.6dp"
                    android:layout_marginTop="10dp"
                    android:background="#767777"
                    app:layout_constraintLeft_toLeftOf="@+id/tv_view"
                    app:layout_constraintRight_toRightOf="@+id/tv_read_story"
                    app:layout_constraintTop_toBottomOf="@+id/tv_describe" />

                <TextView
                    android:id="@+id/tv_value_describe"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:paddingBottom="20dp"
                    android:textColor="#302F2F"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toLeftOf="@+id/tv_view"
                    app:layout_constraintRight_toRightOf="@+id/tv_read_story"
                    app:layout_constraintTop_toBottomOf="@id/tv_line"
                    tools:text="Võ đạo đỉnh phong, là cô độc, là tịch mịch, là dài đằng đẵng cầu tác, là cao xử bất thắng hàn
Lăng Tiêu các thí luyện đệ tử kiêm quét rác gã sai vặt Dương Khai ngẫu lấy được một bản vô tự hắc thư, từ nay về sau đạp vào dài đằng đẵng võ đạo." />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <ImageView
            android:id="@+id/im_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginVertical="10dp"
            android:foreground="@drawable/custom_ripple_view"

            android:background="@drawable/custom_bg_back"
            android:padding="4dp"
            android:src="@drawable/baseline_arrow_back_white_24"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>